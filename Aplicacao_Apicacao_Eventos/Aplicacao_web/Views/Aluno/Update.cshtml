
<h2>Atualizar Aluno</h2>

<form action="Update" method="post" class="form-horizontal">
    <div class="form-horizontal">
        <h4>Alunos</h4>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2">CGU:</label>
            <div class="col-md-10">
                <input class="form-control" type="text" name="cgu" value="@Model.cgu" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nome:</label>
            <div class="col-md-10">
                <input class="form-control" type="text" name="nome" value="@Model.nome" />
            </div>
        </div>
      
        



        <div class="form-group">
            <label class="control-label col-md-2">Data de Nascimento:</label>
            <div class="col-md-10">
                <input class="form-control" type="date" name="dataNasc" value="@Model.dataNasc.ToString("yyyy-MM-dd")" />
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Curso:</label>
            <div class="col-md-10">
                <input class="form-control" type="text" name="curso" value="STADS" readonly />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    a href="../aluno/index" class="btn btn-primary">Tipos de Eventos</a>
</div>

